{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "pretty": true,
    "outDir": "bin",
    "listFiles": true
  },
  "filesGlob": [
	    "./src/**/*.ts",
      "./test/**/*.ts",
      "typings/index.d.ts"
    ]
}
